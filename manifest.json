{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "React Chrome Extension",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "React Chrome Extension"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "activeTab",
        "scripting",
        "webRequest",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}